<!DOCTYPE html>
<html>
  <head>
    <title>Front-end POC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bundle', 'data-turbolinks-track': 'reload', 'module': 'true' %>
  </head>

  <body>
    <%= render "layouts/common/header" %>
    <main>
      <%= yield %>
    </main>
    <%= render "layouts/common/footer"%>
  </body>
</html>
